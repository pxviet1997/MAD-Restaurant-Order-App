<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vietpham.restaurant">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MealMenu"
            android:label="@string/title_activity_meal_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CheckOutActivity" />
        <activity android:name=".PaymentDetails" />
        <activity android:name=".MealStatusActivity" />
        <activity android:name=".OrderedListActivity" />

    </application>

</manifest>